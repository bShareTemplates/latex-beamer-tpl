% BShare logo Palette
\definecolor{BSdbg}{rgb}{0.122,0.063,0.000} % Dark-Brown background
\definecolor{BSlbg}{rgb}{0.675,0.616,0.576} % LightBrown background
\definecolor{BScbg}{rgb}{0.424,0.365,0.325} % BrownCross background
\definecolor{BSpbg}{rgb}{0.757,0.725,0.667} % Green-Page background
\definecolor{BScpg}{rgb}{0.631,0.600,0.541} % Cross-Page background

% BShare logo Palette HUE VARIATIONS
\definecolor{BSred}{rgb}{0.133,0.000,0.000} % red hue  --- 000°
\definecolor{BSyel}{rgb}{0.111,0.111,0.000} % yel hue  --- 060°
\definecolor{BSgre}{rgb}{0.000,0.111,0.000} % gre hue  --- 120°
\definecolor{BScya}{rgb}{0.000,0.111,0.111} % cya hue  --- 180°
\definecolor{BSblu}{rgb}{0.000,0.000,0.122} % blu hue  --- 240°
\definecolor{BSmag}{rgb}{0.111,0.000,0.111} % mag hue  --- 300°

% Text Highlight Colors
\definecolor{TXred}{rgb}{0.500,0.000,0.000} % red txt  --- 000°
\definecolor{TXyel}{rgb}{0.500,0.500,0.000} % yel txt  --- 060°
\definecolor{TXgre}{rgb}{0.000,0.500,0.000} % gre txt  --- 120°
\definecolor{TXcya}{rgb}{0.000,0.500,0.500} % cya txt  --- 180°
\definecolor{TXblu}{rgb}{0.000,0.000,0.500} % blu txt  --- 240°
\definecolor{TXmag}{rgb}{0.500,0.000,0.500} % mag txt  --- 300°

\definecolor{TXgry}{rgb}{0.500,0.500,0.500} % gry txt  --- gray

%-----------------------------------------------------------------------------------------------
\mode<presentation>{
    \setbeamercolor*{normal text}{fg=TXgry,bg=BSdbg}                % Slide background
    \setbeamercolor*{structure}{fg=BScbg}                           % Title + Controls
    \setbeamercolor*{alerted text}{fg=TXyel}                        % \alert{} contents
    \setbeamercolor*{item projected}{use=item,fg=white,bg=item.fg!50}   % ???
    % Meanings of primary...quaternary are theme-dependent:
    % - The JuanLesPins theme uses primary to quaternary (bottom to top) top strips
    % - Boadilla, AnnArbor use primary-ternary right to left on a single bottom strip
    % - The Copenhagen theme uses PRIMARY and QUATERNARY only, right to left on top & bottom
    \setbeamercolor*{palette primary}{bg=TXred!50!BSdbg,fg=BScbg}   % top+bot right strips
    \setbeamercolor*{palette secondary}{bg=black,fg=white}          % ???
    \setbeamercolor*{palette tertiary}{bg=BScbg,fg=TXgry}           % top+bot leftmost strip (out of 3)
    \setbeamercolor*{palette quaternary}{bg=BScpg,fg=TXgry}         % top+bot left strips
    \setbeamercolor*{framesubtitle}{fg=BScbg!50!TXgry}
    \setbeamercolor*{subtitle}{fg=BScbg!50!TXgry}                   % Subtitle
    \setbeamercolor*{block title}{parent=structure}
    \setbeamercolor*{block title alerted}{parent=alerted text}
    \setbeamercolor*{block title example}{parent=example text}
    \setbeamercolor*{block body}{}
    \setbeamercolor*{block body alerted}{}
    \setbeamercolor*{block body example}{}
    \setbeamercolor*{titlelike}{parent=structure}
}

%-----------------------------------------------------------------------------------------------
\mode<handout>{% Go easier on printers
    \setbeamercolor*{normal text}{fg=black!40!white,bg=white}       % Slide background
    \setbeamercolor*{structure}{fg=black}                           % Title + Controls
    \setbeamercolor*{alerted text}{fg=black}                        % \alert{} contents
    \setbeamercolor*{palette primary}{bg=black!15!white,fg=black}
    \setbeamercolor*{palette secondary}{bg=black!15!white,fg=black}
    \setbeamercolor*{palette tertiary}{bg=black!15!white,fg=black}
    \setbeamercolor*{palette quaternary}{bg=black!15!white,fg=black}
    \setbeamercolor*{subtitle}{fg=black}                            % Subtitle
}

